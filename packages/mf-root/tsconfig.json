{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false, // TODO: temporary
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "./src"
  },
  "include": [
    "src"
  ]
}
